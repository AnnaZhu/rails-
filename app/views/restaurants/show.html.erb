
<div class="container">
  <h2><%= @restaurant.name %></h2>
  <p><%= @restaurant.category %></p>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>
</div>

<br><br>
<div class="container">
  <h6><%=link_to 'add a review', new_restaurant_review_path(@restaurant)  %></h6>
</div>

<div class="container mt-4">
  <h4>Reviews for <%= @restaurant.name %></h4>
  <% @restaurant.reviews.each do |review| %>
    <p><%= '⭐️' * review.rating %></p>
    <p><%= review.content %>
    <br>- <%= review.created_at.strftime('%Y-%m-%d') %></p>
  <% end %>
</div>
